<%= form_with model:@doctor, locals:true do |form|%>
<p>
First Name:
<%= form.text_field :first_name%>
</p>
<p>
Last Name:
<%= form.text_field :last_name%>
</p>
<p>
Specialty:
<%= form.text_field :specialty%>
</p>
<p>
Zip Code:
<%= form.text_field :zip_code%>
</p>

<%= form.submit "Create"%>
<%= form.submit "Update"%>
<%end%>